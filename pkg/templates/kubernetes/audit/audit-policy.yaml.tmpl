# Default audit policy for KubeXM
# This policy logs metadata for all requests, and request/response bodies for non-trivial requests.
# It ignores high-volume, low-risk requests from system components.
apiVersion: audit.k8s.io/v1
kind: Policy
rules:
  # Log important metadata-only events
  - level: Metadata
    resources:
      - group: "" # core
        resources: ["secrets", "configmaps", "serviceaccounts"]
    verbs: ["get", "list", "watch"]

  # Ignore health checks and other high-volume, low-risk endpoints
  - level: None
    nonResourceURLs:
      - "/healthz*"
      - "/livez*"
      - "/readyz*"
      - "/metrics"
      - "/version"

  # Ignore certain requests from system components
  - level: None
    users: ["system:kube-proxy"]
    verbs: ["watch"]
    resources:
      - group: "" # core
        resources: ["endpoints", "services", "nodes"]

  - level: None
    userGroups: ["system:nodes"]
    verbs: ["get"]
    resources:
      - group: "" # core
        resources: ["nodes"]

  # Log the request body of config changes
  - level: Request
    verbs: ["create", "update", "patch", "delete"]
    resources:
      - group: "" # core
      - group: "apps"
      - group: "extensions"
      - group: "rbac.authorization.k8s.io"
      - group: "apiregistration.k8s.io"
      - group: "apiextensions.k8s.io"
      - group: "storage.k8s.io"
      - group: "batch"
      - group: "networking.k8s.io"
    omitStages:
      - "RequestReceived"

  # A catch-all rule to log all other requests at the Metadata level.
  - level: Metadata
    omitStages:
      - "RequestReceived"