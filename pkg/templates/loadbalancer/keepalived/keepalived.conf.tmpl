vrrp_script chk_haproxy {
    script "killall -0 haproxy"
    interval 2
    weight 2
}

vrrp_instance VI_1 {
    state MASTER
    interface {{ .VRRPInterface }}
    virtual_router_id {{ .VRRPVirtualRouterID }}
    priority {{ .VRRPPriority }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ .VRRPAuthPass }}
    }
    virtual_ipaddress {
        {{ .VRRPVirtualIP }}
    }
    track_script {
        chk_haproxy
    }
}
