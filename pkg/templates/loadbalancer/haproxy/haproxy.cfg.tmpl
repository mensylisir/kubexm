# Health check endpoint for HAProxy itself
frontend healthz
  bind *:8081
  mode http
  monitor-uri /healthz

# Frontend for Kubernetes API Server
frontend kube_api_frontend
  bind {{ .FrontendBindAddress }}:{{ .FrontendBindPort }}
  mode tcp
  option tcplog
  default_backend kube_api_backend

# Backend pool of Kubernetes API Servers
backend kube_api_backend
  mode tcp
  balance leastconn
  default-server inter 15s downinter 15s rise 2 fall 2 slowstart 60s maxconn 1000 maxqueue 256 weight 100
  option httpchk GET /healthz
  http-check expect status 200
  {{- range .BackendServers }}
  server {{ .Name }} {{ .Address }}:{{ .Port }} check check-ssl verify none
  {{- end }}