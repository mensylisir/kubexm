[Unit]
Description=etcd key-value store
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
User={{.User}}
Group={{.Group}}
Type=notify
ExecStart={{.EtcdBinaryPath}} --config-file=/etc/etcd/etcd.conf.yaml
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target